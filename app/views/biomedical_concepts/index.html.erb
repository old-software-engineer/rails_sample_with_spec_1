<%= javascript_include_tag 'standard_datatable' %>
<% top_level_breadcrumb ("Biomedical Concepts") %>
<h3>Index: Biomedical Concepts</h3>
<div class="row">
	<div class="col-md-8">
			<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
			    	<th>Owner</th>
		    		<th>Identifier</th>
		    		<th>Label</th>
		    		<th></th>
			  	</tr>
			</thead>
			<tbody>
				<% @bcs.each do |item| %>
					<tr>
				    	<td><%= item[:owner] %></td>
			    		<td><%= item[:identifier] %></td>
			    		<td><%= item[:label] %></td>
			    		<td><%= link_to "History", history_biomedical_concepts_path(:biomedical_concept => { :identifier => item[:identifier], :scope_id => item[:owner_id] }), :class => "btn btn-primary btn-xs" %></td>
				  	</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<% if policy(BiomedicalConcept).new? %>
			<div id="bc_new" class="panel panel-default">
	      <div class="panel-heading">
	          <h3 class="panel-title">New Biomedical Concept</h3>
	      </div>
	      <div class="panel-body">
					<%= link_to "New", new_biomedical_concept_path, :class => "btn btn-success" %>
				</div>
			</div>	
		<% end %>
		<% if policy(BiomedicalConcept).edit? %>
			<div id="bc_edit" class="panel panel-default">
	      <div class="panel-heading">
	          <h3 class="panel-title">Edit Multiple Biomedical Concepts</h3>
	      </div>
	      <div class="panel-body">
					<%= link_to "Edit Multiple", edit_multiple_biomedical_concepts_path, :class => "btn btn-primary" %>
				</div>
			</div>	
		<% end %>
	</div>
</div>